---
const { href, iconClass, title, description } = Astro.props;
---

<a
    href={href}
    target="_blank"
    class="bg-custom-dark p-8 rounded-2xl text-center card-hover group"
>
    <i
        class={`text-5xl mb-4 ${iconClass} group-hover:scale-110 transition-transform`}
        aria-hidden="true"></i>
    <h3 class="text-xl font-semibold text-gray-100 mb-2">{title}</h3>
    <p class="text-gray-600">{description}</p>
</a>
