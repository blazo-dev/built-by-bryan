---
import SkillIcon from "./SkillIcon.astro";
import type { SkillCategory } from "../../types/skillsTypes";

interface Props extends SkillCategory {}

const { title, icons = [], items = [] } = Astro.props;
const isIconGrid = icons.length > 0;
---

<div class="bg-custom-dark p-8 rounded-2xl shadow-lg card-hover">
    <h3 class="text-2xl font-bold text-amber-300 mb-6 text-center">
        {title}
    </h3>

    {
        isIconGrid ? (
            <ul class="grid grid-cols-3 gap-6 list-none p-0 m-0">
                {icons.map(({ label, iconClass }) => (
                    <SkillIcon label={label} iconClass={iconClass} />
                ))}
            </ul>
        ) : (
            <ul class="space-y-4 list-none p-0 m-0">
                {items.map(({ iconClass, label }) => (
                    <li class="flex items-center">
                        <i
                            class={`text-sky-500 mr-3 ${iconClass}`}
                            aria-hidden="true"
                        />
                        <span>{label}</span>
                    </li>
                ))}
            </ul>
        )
    }
</div>
