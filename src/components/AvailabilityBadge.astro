---
import { portfolioData } from "../data/portfolioData";

const { links } = portfolioData.contact;
const { availability } = portfolioData.personalInfo;
const getInTouchLink = links.find((link) => link.label === "LinkedIn");
---

<div
    class="inline-flex border-2 border-sky-500/50 rounded-full relative items-center justify-center lg:justify-start"
>
    <div
        class="border-2 border-sky-500/30 w-full h-full rounded-full mr-3 animate-ping absolute -z-10"
    >
    </div>
    <a
        class="block px-4 py-1.5 text-sm font-medium"
        href={getInTouchLink?.url}
        target="_blank"
    >
        {availability}
    </a>
</div>
