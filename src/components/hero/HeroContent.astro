---
import { portfolioData } from "../../data/portfolioData";
import AvailabilityBadge from "../AvailabilityBadge.astro";

const { title, summary, name } = portfolioData.personalInfo;
---

<div class="text-gray-100 text-center lg:text-left space-y-6">
    <div class="space-y-4">
        <h1 class="text-4xl md:text-6xl font-bold">
            {name}
            <span
                class="block text-2xl md:text-3xl font-normal text-sky-500 mt-2"
            >
                {title}
            </span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-400">
            {summary}
        </p>
    </div>
    <AvailabilityBadge />
    <footer
        class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
    >
        <a
            href="#projects"
            class="bg-custom-dark text-gray-100 px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition duration-300 text-center"
        >
            Explore my projects
        </a>
        <a
            href="#contact"
            class="border-2 border-sky-500 text-sky-500 px-8 py-3 rounded-lg font-semibold hover:bg-sky-500 hover:text-gray-100 hover:border-sky-500 transition duration-300 text-center"
        >
            Get in touch
        </a>
    </footer>
</div>
