---
import { aboutData } from "../../data/aboutData";

const { content } = aboutData;
---

<p class="text-lg text-gray-400 font-light leading-relaxed">
    {
        content.map(({ text, emphasis }) =>
            emphasis ? (
                <strong class="text-amber-300 font-semibold">{text}</strong>
            ) : (
                text
            )
        )
    }
</p>
